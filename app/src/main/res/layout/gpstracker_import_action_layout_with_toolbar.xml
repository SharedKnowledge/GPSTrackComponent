<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gpstracker_import_action_layout_with_toolbar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/gpstracker_import_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <include
        android:id="@+id/gpstracker_import_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gpstracker_import_toolbar"
        layout="@layout/gpstracker_description_layout" />

    <Button
        android:id="@+id/gpstracker_import_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/gpstracker_item_tracks_import_button_text"
        android:onClick="onImportButtonClicked"
        />

</RelativeLayout>